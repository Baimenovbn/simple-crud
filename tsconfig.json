{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES6",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/*"]
}
